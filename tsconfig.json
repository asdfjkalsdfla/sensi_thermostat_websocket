{
  "project": "sensi_thermostat_websocket",
  "compilerOptions": {
    "emitDeclarationOnly": true,
    "declaration": true,
    "module": "es2020",
    "target": "es2021",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "node"
    ],
    "lib": [
      "es6",
      "DOM"
    ],
    "rootDir": "./src",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "build/"
  },
  "include": [
    "src/**/*"
  ]
}